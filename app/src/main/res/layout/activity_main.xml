<?xml version="1.0" encoding="utf-8"?>

<!--enable scrolling-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--app welcome message-->
        <TextView
            android:id="@+id/welcome_message"
            style="@style/questionSpacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to the quiz app!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--question one-->
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/questionSpacing"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Is this where the first question will go?"></TextView>

            <RadioButton
                android:id="@+id/chioce_1_question_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="First answer number one" />

            <RadioButton
                android:id="@+id/chioce_2_question_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Second answer number one" />

            <RadioButton
                android:id="@+id/chioce_3_question_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Third answer number one" />
        </RadioGroup>

        <!--question two-->
        <LinearLayout
            style="@style/questionSpacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Is this where the second question will go?"></TextView>

            <EditText
                android:id="@+id/answer_question_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your answer here" />
        </LinearLayout>

        <!--question three-->
        <LinearLayout
            style="@style/questionSpacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Is this where the third question will go?" />

            <CheckBox
                android:id="@+id/choice_1_question_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingLeft="24dp"
                android:text="Check 1"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/choice_2_question_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingLeft="24dp"
                android:text="Check 2"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/choice_3_question_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingLeft="24dp"
                android:text="Check 3"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/choice_4_question_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingLeft="24dp"
                android:text="Check 4"
                android:textSize="16sp" />
        </LinearLayout>

        <!--question four-->
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/questionSpacing"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Is this where the fourth question will go?" />

            <RadioButton
                android:id="@+id/chioce_1_question_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="First answer number four" />

            <RadioButton
                android:id="@+id/chioce_2_question_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Second answer number four" />

            <RadioButton
                android:id="@+id/chioce_3_question_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Third answer number four" />
        </RadioGroup>

        <!--question five-->
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/questionSpacing"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Is this where the fifth question will go?"></TextView>

            <RadioButton
                android:id="@+id/chioce_1_question_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="First answer number five" />

            <RadioButton
                android:id="@+id/chioce_2_question_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Second answer number five" />

            <RadioButton
                android:id="@+id/chioce_3_question_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Third answer number five" />
        </RadioGroup>

        <!--submit test button-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:onClick="tallyScore"
            android:text="Submit Test" />

    </LinearLayout>
</ScrollView>
